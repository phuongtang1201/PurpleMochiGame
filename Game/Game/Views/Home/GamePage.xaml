<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.GamePage"
             Title="Game"
             BackgroundImageSource="kitchen_background.png">

    <ContentPage.Content>

        <StackLayout Spacing="10" VerticalOptions="CenterAndExpand">
            <Image Source="foodfightlogo.png"
                       Style="{StaticResource ImageExtraLargeStyle}"
                       HorizontalOptions="CenterAndExpand" />

            <ImageButton Source="kitchen.png"
                             Clicked="DungeonButton_Clicked"
                             WidthRequest="385"
                             HeightRequest="60"/>

            <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center">

                <ImageButton Source="restaurant.png"
                             Clicked="VillageButton_Clicked"
                             WidthRequest="190"
                             HeightRequest="40"/>

                <ImageButton Source="auto_battle.png"
                             Clicked="AutobattleButton_Clicked"
                             WidthRequest="190"
                             HeightRequest="40"/>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>