<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="using:Game.Models"
             xmlns:local_helpers="clr-namespace:Game.Helpers"
             xmlns:local_enum="clr-namespace:Game.Models"
             x:Class="Game.Views.MonsterUpdatePage"
             x:Class="Game.Views.MonsterReadPage"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local_helpers:StringEnumConverter x:Key="StringEnum"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <AbsoluteLayout HorizontalOptions="CenterAndExpand"
                        VerticalOptions="FillAndExpand">

            <StackLayout Style="{StaticResource VerticalStack}"
                         AbsoluteLayout.LayoutBounds="1,1,1,1" 
                         AbsoluteLayout.LayoutFlags="All">

                <ScrollView x:Name="ScrollView">
                    <StackLayout Style="{StaticResource OuterBoxStack}">

                        <Image Source="{Binding Data.ImageURI}" 
                                       Style="{StaticResource ImageExtraLargeStyle}"
                                       HorizontalOptions="Center"/>

                            <Frame Style="{StaticResource NameFrameStyle}"
                                   Margin="40,0,40,0">

                                <Label Style="{StaticResource ValueStyle}"
                                       Text="{Binding Data.Name}"/>
                            </Frame>

                            <Frame Style="{StaticResource DescriptionFrameStyle}"
                                   Margin="40,0,40,0">

                                <Label Style="{StaticResource ValueStyle}"
                                       Text="{Binding Data.Description}"
                                       LineBreakMode="WordWrap"
                                       VerticalOptions="Start" />

                            </Frame>

                        <Frame Style="{StaticResource StatisticsFrame}">
                            <StackLayout>

                                <Grid RowSpacing="4" ColumnSpacing="7"
                                  VerticalOptions="Center" HorizontalOptions="Center">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="100" />
                                    </Grid.ColumnDefinitions>

                                    <BoxView Grid.Row="2" Grid.Column="0" 
                                         Grid.ColumnSpan="5" Grid.RowSpan="8"
                                         Color="LightGray" CornerRadius="5"/>

                                    <Label Grid.Row="2" Grid.Column="0"
                                       Text="Statistics" Padding="5,0,0,0"
                                       Style="{StaticResource HeaderStyle}"/>

                                    <Label Grid.Row="3" Grid.Column="0"
                                       Text="Level:" Padding="5,0,0,0"
                                       Style="{StaticResource LabelStyle}"/>

                                    <Label Grid.Row="3" Grid.Column="1"
                                       Text="{Binding Data.Level}" 
                                       Style="{StaticResource ValueStyle}"/>

                                    <Label Grid.Column="0" Grid.Row="4"
                                       Text="Attribute" Padding="5,0,0,0"
                                       Style="{StaticResource LabelStyle}"/>
                                    <Label Grid.Column="1" Grid.Row="4"
                                       Text="Base Value" 
                                       Style="{StaticResource LabelStyle}"/>
                                    <Label Grid.Column="2" Grid.Row="4"
                                       Text="Level Bonus" 
                                       Style="{StaticResource LabelStyle}"/>
                                    <Label Grid.Column="3" Grid.Row="4"
                                       Text="Item Bonus" 
                                       Style="{StaticResource LabelStyle}"/>
                                    <Label Grid.Column="4" Grid.Row="4"
                                       Text="Total Value" 
                                       Style="{StaticResource LabelStyle}"/>

                                    <Label Grid.Column="0" Grid.Row="5"
                                       Text="Attack" Padding="5,0,0,0"
                                       Style="{StaticResource LabelStyle}"/>
                                    <Label Grid.Column="1" Grid.Row="5"
                                       Text="{Binding Data.Attack}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="2" Grid.Row="5"
                                       Text="{Binding Data.GetAttackLevelBonus}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="3" Grid.Row="5"
                                       Text="{Binding Data.GetAttackItemBonus}"  HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="4" Grid.Row="5"
                                       Text="{Binding Data.GetAttackTotal}"  HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>

                                    <Label Grid.Column="0" Grid.Row="6"
                                       Text="Defense" Padding="5,0,0,0"
                                       Style="{StaticResource LabelStyle}"/>
                                    <Label Grid.Column="1" Grid.Row="6"
                                       Text="{Binding Data.Defense}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="2" Grid.Row="6"
                                       Text="{Binding Data.GetDefenseLevelBonus}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="3" Grid.Row="6"
                                       Text="{Binding Data.GetDefenseItemBonus}"  HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="4" Grid.Row="6"
                                       Text="{Binding Data.GetDefenseTotal}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>

                                    <Label Grid.Column="0" Grid.Row="7"
                                       Text="Speed" Padding="5,0,0,0"
                                       Style="{StaticResource LabelStyle}"/>
                                    <Label Grid.Column="1" Grid.Row="7"
                                       Text="{Binding Data.Speed}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="2" Grid.Row="7"
                                       Text="{Binding Data.GetSpeedLevelBonus}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="3" Grid.Row="7"
                                       Text="{Binding Data.GetSpeedItemBonus}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="4" Grid.Row="7"
                                       Text="{Binding Data.GetSpeedTotal}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>

                                    <Label Grid.Column="0" Grid.Row="8"
                                       Text="Max Health" Padding="5,0,0,0"
                                       Style="{StaticResource LabelStyle}"/>
                                    <Label Grid.Column="1" Grid.Row="8"
                                       Text="{Binding Data.MaxHealth}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="2" Grid.Row="8"
                                       Text="{Binding Data.GetMaxHealthLevelBonus}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="3" Grid.Row="8"
                                       Text="{Binding Data.GetMaxHealthItemBonus}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="4" Grid.Row="8"
                                       Text="{Binding Data.GetMaxHealthTotal}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>

                                    <Label Grid.Column="0" Grid.Row="9"
                                       Text="Damage" Padding="5,0,0,0"
                                       Style="{StaticResource LabelStyle}"/>
                                    <Label Grid.Column="1" Grid.Row="9"
                                       Text="-" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="2" Grid.Row="9"
                                       Text="{Binding Data.GetDamageLevelBonus}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="3" Grid.Row="9"
                                       Text="{Binding Data.GetDamageItemBonusString}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="4" Grid.Row="9"
                                       Text="{Binding Data.GetDamageTotalString}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>

                                </Grid>
                            </StackLayout>
                        </Frame>

                        <StackLayout Style="{StaticResource HorizontalStack}" 
                                     HorizontalOptions="Center">

                            <Button Style="{StaticResource CancelUpdateDeleteButton}" 
                            Text="Delete"
                            Clicked="Delete_Clicked"/>

                            <Button Style="{StaticResource CancelUpdateDeleteButton}" 
                            Text="Update"
                            Clicked="Update_Clicked"/>

                        </StackLayout>
                    </StackLayout>
                </ScrollView>
            </StackLayout>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>