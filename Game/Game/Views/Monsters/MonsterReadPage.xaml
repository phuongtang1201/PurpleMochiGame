<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Game.Views.MonsterReadPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Update" Clicked="Update_Clicked" IconImageSource="icon_edit.png"/>
        <ToolbarItem Text="Delete" Clicked="Delete_Clicked" IconImageSource="icon_delete.png"/>
    </ContentPage.ToolbarItems>

    <AbsoluteLayout
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="FillAndExpand"
        >

        <StackLayout Style="{StaticResource VerticalStack}"
                    AbsoluteLayout.LayoutBounds="1,1,1,1" 
                    AbsoluteLayout.LayoutFlags="All">

            <ScrollView x:Name="ScrollView">
                <StackLayout Style="{StaticResource OuterBoxStack}">

                    <StackLayout Style="{StaticResource VerticalStack}">

                        <Label Text="Read Page" Style="{StaticResource HeaderStyle}"/>

                    </StackLayout>
                    <StackLayout Margin="60,0,60,0" >
                        <Image Source="{Binding Data.ImageURI}" 
                                Style="{StaticResource ImageLargeStyle}"
                                HorizontalOptions="Center"/>
                        <Grid
                                  RowSpacing="1" 
                                  ColumnSpacing="3"
                                  VerticalOptions="Center"
                                  HorizontalOptions="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" 
                                    Text="Name:"
                                    Style="{StaticResource HeaderStyle}"/>
                            <Label Grid.Row="0" Grid.Column="1" 
                                    Text="{Binding Data.Name}"
                                    Style="{StaticResource ValueStyle}"/>

                            <Label Grid.Row="1" Grid.Column="0" 
                                    Text="Description:"
                                    Style="{StaticResource HeaderStyle}"/>

                            <Label Grid.Row="1" Grid.Column="1" 
                                    Text="{Binding Data.Description}"
                                    LineBreakMode="WordWrap"
                                    Style="{StaticResource ValueStyle}"/>
                            <Label Grid.Row="2" Grid.Column="0"
                                    Text="Level:" 
                                    Style="{StaticResource HeaderStyle}"/>
                            <Label Grid.Row="2" Grid.Column="1"
                                    Text="{Binding Data.Level}" 
                                    Style="{StaticResource ValueStyle}"/>
                            <Label Grid.Row="3" Grid.Column="0"
                                    Text="Max Health:" 
                                    Style="{StaticResource HeaderStyle}"/>
                            <Label Grid.Row="3" Grid.Column="1"
                                    Text="{Binding Data.GetMaxHealthTotal}" 
                                    Style="{StaticResource ValueStyle}"/>
                        </Grid>
                    </StackLayout>
                    <StackLayout
                        Margin="20,0,20,0"
                        Padding="10,0,15,0"
                        BackgroundColor="LightGray">

                        <Grid ColumnSpacing="5" 
                              RowSpacing="2">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5"
                                    Text="Statistics"
                                    Style="{StaticResource HeaderStyle}"/>
                            <Label Grid.Column="0" Grid.Row="1"
                                    Text="Attribute" 
                                    Style="{StaticResource LabelStyle}"/>
                            <Label Grid.Column="1" Grid.Row="1"
                                    Text="Base Value" 
                                    Style="{StaticResource LabelStyle}"/>
                            <Label Grid.Column="2" Grid.Row="1"
                                    Text="Level Bonus" 
                                    Style="{StaticResource LabelStyle}"/>
                            <Label Grid.Column="3" Grid.Row="1"
                                    Text="Item Bonus" 
                                    Style="{StaticResource LabelStyle}"/>
                            <Label Grid.Column="4" Grid.Row="1"
                                    Text="Total Value" 
                                    Style="{StaticResource LabelStyle}"/>

                            <Label Grid.Column="0" Grid.Row="2"
                                    Text="Attack"
                                    Style="{StaticResource LabelStyle}"/>
                            <Label Grid.Column="1" Grid.Row="2"
                                    Text="{Binding Data.Attack}" HorizontalOptions="Center"
                                    Style="{StaticResource ValueStyle}"/>
                            <Label Grid.Column="2" Grid.Row="2"
                                    Text="{Binding Data.GetAttackLevelBonus}" HorizontalOptions="Center"
                                    Style="{StaticResource ValueStyle}"/>
                            <Label Grid.Column="3" Grid.Row="2"
                                    Text="{Binding Data.GetAttackItemBonus}"  HorizontalOptions="Center"
                                    Style="{StaticResource ValueStyle}"/>
                            <Label Grid.Column="4" Grid.Row="2"
                                    Text="{Binding Data.GetAttackTotal}"  HorizontalOptions="Center"
                                    Style="{StaticResource ValueStyle}"/>

                            <Label Grid.Column="0" Grid.Row="3"
                                    Text="Defense" 
                                    Style="{StaticResource LabelStyle}"/>
                        </Grid>
                    </StackLayout>

                </StackLayout>
            </ScrollView>
        </StackLayout>

    </AbsoluteLayout>
</ContentPage>