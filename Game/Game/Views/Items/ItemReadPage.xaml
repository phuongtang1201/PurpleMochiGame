<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Game.Views.ItemReadPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Update" Clicked="Update_Clicked" IconImageSource="icon_edit.png"/>
        <ToolbarItem Text="Delete" Clicked="Delete_Clicked" IconImageSource="icon_delete.png"/>
    </ContentPage.ToolbarItems>


    <ScrollView>

        <StackLayout Style="{StaticResource OuterBoxStack}" Spacing="10">
            <StackLayout HorizontalOptions="Center">
                <Image Source="{Binding Data.ImageURI}"  Style="{StaticResource ImageLargeStyle}" HorizontalOptions="CenterAndExpand"/>

                <Label Text="Item Name:" HorizontalOptions="Start"
                Style="{StaticResource LabelStyle}"/>
                <Label Text="{Binding Data.Name}" HorizontalOptions="Start"
                Style="{StaticResource ValueStyle}"/>

                <Label 
                Text="Description:" HorizontalOptions="Start"
                Style="{StaticResource LabelStyle}"/>
                <Label 
                Text="{Binding Data.Description}" HorizontalOptions="Start"
                Style="{StaticResource ValueStyle}"/>

                <Label Text="Statistics" HorizontalOptions="Start"
                       Style="{StaticResource HeaderStyle}"/>
                <Label Text="Location:" HorizontalOptions="Start"
                    Style="{StaticResource LabelStyle}"/>
                <Label Text="{Binding Data.Location}" HorizontalOptions="Start"
                    Style="{StaticResource ValueStyle}"/>

                <Label Text="Attribute:" HorizontalOptions="Start"
                    Style="{StaticResource LabelStyle}"/>
                <Label Text="{Binding Data.Attribute}"  HorizontalOptions="Start"
                    Style="{StaticResource ValueStyle}"/>

                <Label Text="Range:" HorizontalOptions="Start"
                    Style="{StaticResource LabelStyle}"/>
                <Label Text="{Binding Data.Range}" HorizontalOptions="Start"
                    Style="{StaticResource ValueStyle}"/>

                <Label Text="Value:" HorizontalOptions="Start"
                    Style="{StaticResource LabelStyle}"/>
                <Label 
                    Text="{Binding Data.Value}" 
                    Style="{StaticResource ValueStyle}"/>

                <Label 
                    Text="Damage:" HorizontalOptions="Start"
                    Style="{StaticResource LabelStyle}"/>
                <Label Text="{Binding Data.Damage}" HorizontalOptions="Start"
                    Style="{StaticResource ValueStyle}"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>