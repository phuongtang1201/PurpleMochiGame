<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Game.Views.ItemReadPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Update" Clicked="Update_Clicked" IconImageSource="icon_edit.png"/>
        <ToolbarItem Text="Delete" Clicked="Delete_Clicked" IconImageSource="icon_delete.png"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
    <ScrollView>
        <StackLayout Spacing="10">
            <StackLayout HorizontalOptions="Center">
                <Image Source="{Binding Data.ImageURI}"  Style="{StaticResource ImageLargeStyle}" HorizontalOptions="CenterAndExpand"/>
                <Grid
                    RowSpacing="1"
                    ColumnSpacing="2"
                    HorizontalOptions="Center">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="225" />
                    </Grid.ColumnDefinitions>
                    
                    <Label Grid.Row="0" Grid.Column="0" 
                           Text="Item Name:" HorizontalOptions="Start"
                           Style="{StaticResource LabelStyle}"/>
                    <Label Grid.Row="0" Grid.Column="1"
                           Text="{Binding Data.Name}" HorizontalOptions="Start"
                           Style="{StaticResource ValueStyle}"/>

                    <Label Grid.Row="1" Grid.Column="0" 
                           Text="Description:" HorizontalOptions="Start"
                           Style="{StaticResource LabelStyle}"/>
                    <Label Grid.Row="1" Grid.Column="1" 
                           Text="{Binding Data.Description}" HorizontalOptions="Start"
                           LineBreakMode="WordWrap"
                           Style="{StaticResource ValueStyle}"/>
                </Grid>

                <Grid
                     RowSpacing="1"
                     ColumnSpacing="2"
                     HorizontalOptions="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75" />
                        <ColumnDefinition Width="125" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" 
                           Text="Statistics" HorizontalOptions="Start"
                           Style="{StaticResource HeaderStyle}"/>
                    <Label Grid.Row="1" Grid.Column="0" 
                           Text="Location:" HorizontalOptions="Start"
                           Style="{StaticResource LabelStyle}"/>
                    <Label Grid.Row="1" Grid.Column="1" 
                          Text="{Binding Data.Location}" HorizontalOptions="Start"
                           Style="{StaticResource ValueStyle}"/>

                    <Label Grid.Row="2" Grid.Column="0" 
                           Text="Attribute:" HorizontalOptions="Start"
                           Style="{StaticResource LabelStyle}"/>
                    <Label Grid.Row="2" Grid.Column="1" 
                           Text="{Binding Data.Attribute}"  HorizontalOptions="Start"
                           Style="{StaticResource ValueStyle}"/>

                    <Label Grid.Row="3" Grid.Column="0" 
                           Text="Range:" HorizontalOptions="Start"
                           Style="{StaticResource LabelStyle}"/>
                    <Label Grid.Row="3" Grid.Column="1" 
                           Text="{Binding Data.Range}" HorizontalOptions="Start"
                           Style="{StaticResource ValueStyle}"/>

                    <Label Grid.Row="4" Grid.Column="0" 
                           Text="Value:" HorizontalOptions="Start"
                           Style="{StaticResource LabelStyle}"/>
                    <Label Grid.Row="4" Grid.Column="1" 
                           Text="{Binding Data.Value}" 
                           Style="{StaticResource ValueStyle}"/>

                    <Label Grid.Row="5" Grid.Column="0" 
                       Text="Damage:" HorizontalOptions="Start"
                           Style="{StaticResource LabelStyle}"/>
                    <Label Grid.Row="5" Grid.Column="1" 
                           Text="{Binding Data.Damage}" HorizontalOptions="Start"
                           Style="{StaticResource ValueStyle}"/>
                </Grid>
            </StackLayout>
        </StackLayout>
    </ScrollView>
    </ContentPage.Content>
</ContentPage>