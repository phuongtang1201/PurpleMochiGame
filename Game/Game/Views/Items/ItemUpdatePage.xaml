<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local_helpers="clr-namespace:Game.Helpers"
             xmlns:local="using:Game.Models"
             x:Class="Game.Views.ItemUpdatePage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
       
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <ResourceDictionary>
            <local_helpers:StringEnumConverter x:Key="StringEnum"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <AbsoluteLayout
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        >

            <StackLayout Style="{StaticResource VerticalStack}"
                    AbsoluteLayout.LayoutBounds="1,1,1,1" 
                    AbsoluteLayout.LayoutFlags="All">

                <ScrollView>
                    <StackLayout Style="{StaticResource OuterBoxStack}"
                                 Spacing="10">

                        <Label x:Name="Warning_Not_Null_Message" TextColor="Red"/>

                        <StackLayout Margin="60,0,60,0">

                            <Image Source="{Binding Data.ImageURI}" Style="{StaticResource ImageExtraLargeStyle}" 
                                   HorizontalOptions="Center"/>

                            <Label Text="Item Name"
                                   Style="{StaticResource LabelStyle}"/>

                            <Frame 
                                Style="{StaticResource NameFrameStyle}">

                                <Entry 
                                    Text="{Binding Data.Name, Mode=TwoWay}" 
                                    Style="{StaticResource EntryStyle}"
                                    TextChanged="Entry_CheckNotEmpty"/>
                            </Frame>

                            <Label Text="Description" 
                                   Style="{StaticResource LabelStyle}"/>

                            <Entry Text="{Binding Data.Description}" 
                                   TextChanged="Entry_CheckNotEmpty"
                                   Style="{StaticResource EntryStyle}"/>

                        </StackLayout>

                        <Frame
                            Style="{StaticResource StatisticsFrame}">
                            <StackLayout>

                                <Grid
                              RowSpacing="1"
                              ColumnSpacing="2"
                              HorizontalOptions="Center">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Row="0" Grid.Column="0"
                                       Text="Statistics" 
                                       Style="{StaticResource HeaderStyle}"/>

                                    <StackLayout Grid.Row="1" Grid.Column="0" Style="{StaticResource HorizontalStack}" 
                                             HorizontalOptions="FillAndExpand">

                                        <Label Text="Image" 
                                           Style="{StaticResource LabelStyle}"/>
                                        <Image Source="{Binding Data.ImageURI}"
                                           Style="{StaticResource ImageSmallStyle}"/>

                                    </StackLayout>

                                    <Entry Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                       Text="{Binding Data.ImageURI}" 
                                       Style="{StaticResource EntryStyle}"/>

                                    <Label Grid.Row="2" Grid.Column="0"
                                       Text="Location" 
                                       Style="{StaticResource LabelStyle}"/>

                                    <Picker Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                                        ItemsSource="{x:Static local:ItemLocationEnumHelper.GetListCharacter}" 
                                        SelectedItem="{Binding Data.Location, Converter={StaticResource StringEnum}, Mode=TwoWay}" 
                                        x:Name="LocationPicker"/>

                                    <Label Grid.Row="3" Grid.Column="0"
                                       Text="Attribute" 
                                       Style="{StaticResource LabelStyle}"/>

                                    <Picker Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                                        ItemsSource="{x:Static local:AttributeEnumHelper.GetListCharacter}" 
                                        SelectedItem="{Binding Data.Attribute, Converter={StaticResource StringEnum}, Mode=TwoWay}" 
                                        x:Name="AttributePicker"/>
                                </Grid>

                                <StackLayout Style="{StaticResource VerticalStack}" HorizontalOptions="FillAndExpand">

                                    <Label 
                                        Text="Range" 
                                       Style="{StaticResource LabelStyle}" />

                                    <StackLayout Style="{StaticResource HorizontalStack}" Padding="10,0,10,0">

                                        <Slider Style="{StaticResource SliderStyle}"
                                                x:Name ="RangeValue2" 
                                                Value="{Binding Data.Range, Mode=TwoWay}"
                                                ValueChanged="Range_OnSliderValueChanged"/>

                                        <Label Style="{StaticResource SliderValueStyle}"
                                               Text="{Binding Data.Range, Mode=TwoWay}" 
                                               x:Name="RangeValue"/>
                                        
                                    </StackLayout>

                                    <Label Text="Value"
                                       Style="{StaticResource LabelStyle}"/>

                                    <StackLayout Style="{StaticResource HorizontalStack}" Padding="10,0,10,0">

                                        <Slider Style="{StaticResource SliderStyle}"
                                                x:Name ="ValueValue2" 
                                                Value="{Binding Data.Value, Mode=TwoWay}"
                                                ValueChanged="Value_OnSliderValueChanged"/>

                                        <Label Style="{StaticResource SliderValueStyle}"
                                               Text="{Binding Data.Value, Mode=TwoWay}" 
                                               x:Name="ValueValue"/>
                                        
                                    </StackLayout>

                                    <Label 
                                        Text="Damage" 
                                        Style="{StaticResource LabelStyle}"/>

                                    <StackLayout Style="{StaticResource HorizontalStack}" Padding="10,0,10,0">

                                        <Slider Style="{StaticResource SliderStyle}"
                                                x:Name ="DamageValue2" 
                                                Value="{Binding Data.Damage, Mode=TwoWay}"
                                                ValueChanged="Damage_OnSliderValueChanged"/>

                                        <Label Style="{StaticResource SliderValueStyle}"
                                               Text="{Binding Data.Damage, Mode=TwoWay}" 
                                               x:Name="DamageValue"/>
                                        
                                    </StackLayout>

                                </StackLayout>
                            </StackLayout>
                        </Frame>

                        <StackLayout
                            Style="{StaticResource HorizontalStack}" 
                            HorizontalOptions="Center">

                            <Button WidthRequest="120"
                                    HeightRequest="40"
                                    Margin="10,0,0,0"
                                    Text="Cancel"
                                    Clicked="Cancel_Clicked"/>

                            <Button WidthRequest="120"
                                    HeightRequest="40"
                                    Margin="10,0,0,0"
                                    Text="Save"
                                    Clicked="Save_Clicked"/>
                        </StackLayout>
                    </StackLayout>
                </ScrollView>
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>