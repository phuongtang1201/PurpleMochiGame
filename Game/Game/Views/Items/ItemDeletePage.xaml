<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="using:Game.Models"
             xmlns:local_helpers="clr-namespace:Game.Helpers"
             xmlns:local_enum="clr-namespace:Game.Models"
             x:Class="Game.Views.ItemDeletePage"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local_helpers:StringEnumConverter x:Key="StringEnum"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <AbsoluteLayout HorizontalOptions="CenterAndExpand"
                        VerticalOptions="FillAndExpand">

            <StackLayout Style="{StaticResource VerticalStack}"
                         AbsoluteLayout.LayoutBounds="1,1,1,1" 
                         AbsoluteLayout.LayoutFlags="All">

                <ScrollView>
                    <StackLayout Style="{StaticResource OuterBoxStack}">

                        <Image Source="{Binding Data.ImageURI}"
                                   Style="{StaticResource ImageExtraLargeStyle}" 
                                   HorizontalOptions="Center"/>

                            <Frame Style="{StaticResource NameFrameStyle}">

                                <Label Style="{StaticResource ValueStyle}"
                                       Text="{Binding Data.Name}"/>
                            </Frame>

                            <Frame Style="{StaticResource DescriptionFrameStyle}">

                                <Label Style="{StaticResource ValueStyle}"
                                       Text="{Binding Data.Description}"
                                       LineBreakMode="WordWrap"/>
                            </Frame>

                        <Grid RowSpacing="4" ColumnSpacing="7"
                                  VerticalOptions="Center" HorizontalOptions="Center">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>

                            <BoxView Grid.Row="2" Grid.Column="0" 
                                         Grid.ColumnSpan="2" Grid.RowSpan="6"
                                         Color="LightGray" CornerRadius="5"/>

                            <Label Grid.Row="2" Grid.Column="0"
                                       Text="Statistics" Margin="5,0,5,0"
                                       Style="{StaticResource HeaderStyle}" />

                            <Label Grid.Row="3" Grid.Column="0"
                                       Text="Location:" 
                                       Style="{StaticResource GrayBoxStyle}"/>

                            <Label Grid.Row="3" Grid.Column="1"
                                       Text="{Binding Data.Location}"
                                       Style="{StaticResource ValueStyle}"/>

                            <Label Grid.Row="4" Grid.Column="0"
                                       Text="Attribute:" 
                                       Style="{StaticResource GrayBoxStyle}"/>

                            <Label Grid.Row="4" Grid.Column="1"
                                       Text="{Binding Data.Attribute}"
                                       Style="{StaticResource ValueStyle}"/>

                            <Label Grid.Row="5" Grid.Column="0"
                                       Text="Range:" 
                                       Style="{StaticResource GrayBoxStyle}"/>

                            <Label Grid.Row="5" Grid.Column="1"
                                       Text="{Binding Data.Range}"
                                       Style="{StaticResource ValueStyle}"/>

                            <Label Grid.Row="6" Grid.Column="0"
                                       Text="Value:" 
                                       Style="{StaticResource GrayBoxStyle}"/>

                            <Label Grid.Row="6" Grid.Column="1"
                                       Text="{Binding Data.Value}"
                                       Style="{StaticResource ValueStyle}"/>

                            <Label Grid.Row="7" Grid.Column="0"
                                       Text="Damage:" 
                                       Style="{StaticResource GrayBoxStyle}"/>

                            <Label Grid.Row="7" Grid.Column="1"
                                       Text="{Binding Data.Damage}"
                                       Style="{StaticResource ValueStyle}"/>

                        </Grid>

                        <Grid RowSpacing="1" ColumnSpacing="2"
                              HorizontalOptions="Center">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                            </Grid.ColumnDefinitions>

                            <BoxView Grid.ColumnSpan="2"
                             Grid.RowSpan="2"
                             Style="{StaticResource YesNoBoxView}"/>

                            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  
                           Text="Are you sure you want to delete this item?" 
                           Style="{StaticResource WarningDeleteLabelStyle}"/>

                            <Button Grid.Row="1" Grid.Column="0"
                            Text="Yes" Clicked="Delete_Clicked" 
                            Style="{StaticResource YesNoButton}">
                            </Button>

                            <Button Grid.Row="1" Grid.Column="1"
                            Text="No" Clicked="Cancel_Clicked" 
                            Style="{StaticResource YesNoButton}">
                            </Button>
                        </Grid>
                    </StackLayout>
                </ScrollView>
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>