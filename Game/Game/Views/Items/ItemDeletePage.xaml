<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Game.Views.ItemDeletePage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout Spacing="10">
            <StackLayout HorizontalOptions="Center">

                <Image Source="{Binding Data.ImageURI}" Style="{StaticResource ImageLargeStyle}" />

                <Grid
                    RowSpacing="1"
                    ColumnSpacing="2"
                    HorizontalOptions="Center">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="225" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Text="Name:" 
                           Style="{StaticResource LabelStyle}"/>

                    <Label Grid.Row="0" Grid.Column="1"
                           Text="{Binding Data.Name}" 
                           Style="{StaticResource ValueStyle}"/>

                    <Label Grid.Row="1" Grid.Column="0" Text="Description:" 
                           Style="{StaticResource LabelStyle}"/>

                    <Label Grid.Row="1" Grid.Column="1"
                           Text="{Binding Data.Description}" 
                           Style="{StaticResource ValueStyle}"/>
                </Grid>

                <Grid
                     RowSpacing="1"
                     ColumnSpacing="2"
                     HorizontalOptions="Center">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>

                    <BoxView Grid.ColumnSpan="2"
                             Grid.RowSpan="2"
                             Color="LightGray" 
                             CornerRadius="5"/>

                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  
                           Text="Are you sure you want to delete this item?" 
                           LineBreakMode="WordWrap"
                           Style="{StaticResource MessageStyle}"/>

                    <Button Grid.Row="1" Grid.Column="0"
                            Text="No" Clicked="Cancel_Clicked" 
                            HorizontalOptions="Center"
                            FontSize="Medium"
                            BorderWidth="1" BorderColor="black">
                    </Button>

                    <Button Grid.Row="1" Grid.Column="1"
                            Text="Yes" Clicked="Delete_Clicked" 
                            HorizontalOptions="Center"
                            FontSize="Medium"
                            BorderWidth="1" BorderColor="black">
                    </Button>
                </Grid>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>