<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Game.Views.CharacterReadPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
    <AbsoluteLayout
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="FillAndExpand"
        >

        <StackLayout Style="{StaticResource VerticalStack}"
                    AbsoluteLayout.LayoutBounds="1,1,1,1" 
                    AbsoluteLayout.LayoutFlags="All">

            <ScrollView x:Name="ScrollView">
                <StackLayout Style="{StaticResource OuterBoxStack}"
                             Spacing="10">

                        <StackLayout Margin="60,0,60,0" >

                            <Image Source="{Binding Data.ImageURI}" 
                                   Style="{StaticResource ImageLargeStyle}"
                                   HorizontalOptions="Center"/>

                            <Grid
                                  RowSpacing="1"
                                  ColumnSpacing="3"
                                  VerticalOptions="Center">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>

                                <Label Grid.Row="0" Grid.Column="0" 
                                       Text="Item Name:"
                                       Style="{StaticResource HeaderStyle}"/>

                                <Label Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding Data.Name}"
                                       Style="{StaticResource ValueStyle}"/>

                                <Label Grid.Row="1" Grid.Column="0" 
                                       Text="Description:"
                                       Style="{StaticResource HeaderStyle}"/>

                                <Label Grid.Row="1" Grid.Column="1" 
                                       Text="{Binding Data.Description}"
                                       LineBreakMode="WordWrap"
                                       Style="{StaticResource ValueStyle}"/>

                                <Label Grid.Row="2" Grid.Column="0"
                                       Text="Level:" 
                                       Style="{StaticResource HeaderStyle}"/>
                                <Label Grid.Row="2" Grid.Column="1"
                                       Text="{Binding Data.Level}" 
                                       Style="{StaticResource ValueStyle}"/>

                                <Label Grid.Row="3" Grid.Column="0"
                                       Text="Max Health:" 
                                       Style="{StaticResource HeaderStyle}"/>
                                <Label Grid.Row="3" Grid.Column="1"
                                       Text="{Binding Data.GetMaxHealthTotal}" 
                                       Style="{StaticResource ValueStyle}"/>

                            </Grid>
                        </StackLayout>

                        <StackLayout
                            Margin="20,0,20,0"
                            Padding="10,0,15,0"
                            BackgroundColor="LightGray">

                                <Grid ColumnSpacing="5" 
                                      RowSpacing="2">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5"
                                       Text="Statistics"
                                       Style="{StaticResource HeaderStyle}"/>

                                <Label Grid.Column="0" Grid.Row="1"
                                       Text="Attribute" 
                                       Style="{StaticResource LabelStyle}"/>
                                    <Label Grid.Column="1" Grid.Row="1"
                                       Text="Base Value" 
                                       Style="{StaticResource LabelStyle}"/>
                                    <Label Grid.Column="2" Grid.Row="1"
                                       Text="Level Bonus" 
                                       Style="{StaticResource LabelStyle}"/>
                                    <Label Grid.Column="3" Grid.Row="1"
                                       Text="Item Bonus" 
                                       Style="{StaticResource LabelStyle}"/>
                                    <Label Grid.Column="4" Grid.Row="1"
                                       Text="Total Value" 
                                       Style="{StaticResource LabelStyle}"/>

                                    <Label Grid.Column="0" Grid.Row="2"
                                       Text="Attack"
                                       Style="{StaticResource LabelStyle}"/>
                                    <Label Grid.Column="1" Grid.Row="2"
                                       Text="{Binding Data.Attack}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="2" Grid.Row="2"
                                       Text="{Binding Data.GetAttackLevelBonus}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="3" Grid.Row="2"
                                       Text="{Binding Data.GetAttackItemBonus}"  HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="4" Grid.Row="2"
                                       Text="{Binding Data.GetAttackTotal}"  HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>

                                    <Label Grid.Column="0" Grid.Row="3"
                                       Text="Defense" 
                                       Style="{StaticResource LabelStyle}"/>
                                    <Label Grid.Column="1" Grid.Row="3"
                                       Text="{Binding Data.Defense}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="2" Grid.Row="3"
                                       Text="{Binding Data.GetDefenseLevelBonus}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="3" Grid.Row="3"
                                       Text="{Binding Data.GetDefenseItemBonus}"  HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="4" Grid.Row="3"
                                       Text="{Binding Data.GetDefenseTotal}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>

                                    <Label Grid.Column="0" Grid.Row="4"
                                       Text="Speed" 
                                       Style="{StaticResource LabelStyle}"/>
                                    <Label Grid.Column="1" Grid.Row="4"
                                       Text="{Binding Data.Speed}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="2" Grid.Row="4"
                                       Text="{Binding Data.GetSpeedLevelBonus}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="3" Grid.Row="4"
                                       Text="{Binding Data.GetSpeedItemBonus}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="4" Grid.Row="4"
                                       Text="{Binding Data.GetSpeedTotal}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>

                                    <Label Grid.Column="0" Grid.Row="5"
                                       Text="Max Health" 
                                       Style="{StaticResource LabelStyle}"/>
                                    <Label Grid.Column="1" Grid.Row="5"
                                       Text="{Binding Data.MaxHealth}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="2" Grid.Row="5"
                                       Text="{Binding Data.GetMaxHealthLevelBonus}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="3" Grid.Row="5"
                                       Text="{Binding Data.GetMaxHealthItemBonus}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="4" Grid.Row="5"
                                       Text="{Binding Data.GetMaxHealthTotal}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>

                                    <Label Grid.Column="0" Grid.Row="6"
                                       Text="Damage" 
                                       Style="{StaticResource LabelStyle}"/>
                                    <Label Grid.Column="1" Grid.Row="6"
                                       Text="-" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="2" Grid.Row="6"
                                       Text="{Binding Data.GetDamageLevelBonus}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="3" Grid.Row="6"
                                       Text="{Binding Data.GetDamageItemBonusString}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                    <Label Grid.Column="4" Grid.Row="6"
                                       Text="{Binding Data.GetDamageTotalString}" HorizontalOptions="Center"
                                       Style="{StaticResource ValueStyle}"/>
                                </Grid>
                            </StackLayout>

                        <Label
                            Text="Items Box"
                            FontSize="Small"
                            Padding="10,0,0,0"
                            Margin="20,0,20,-10"
                            BackgroundColor="LightGray"
                            />
                        <FlexLayout 
                            Margin="20,0,20,0"
                            BackgroundColor="LightGray"
                            Padding="10"
                            Wrap="Wrap"
                            JustifyContent="SpaceAround"
                            AlignContent="SpaceAround"
                            x:Name="ItemBox">
                        </FlexLayout>
                        <StackLayout
                            Style="{StaticResource HorizontalStack}" 
                            HorizontalOptions="Center">
                            <Button
                            Text="Delete"
                            Clicked="Delete_Clicked"
                            Margin="10,0,0,0"
                            WidthRequest="120"
                            HeightRequest="40"/>
                            <Button
                            Text="Update"
                            Clicked="Update_Clicked"
                            WidthRequest="120"
                            HeightRequest="40"
                            Margin="20,0,0,0"/>
                        </StackLayout>
                    </StackLayout>
            </ScrollView>
        </StackLayout>

        <!--The Item Popup-->
        <StackLayout x:Name="PopupLoadingView" 
                 BackgroundColor="{StaticResource PageBackgroundColor}" 
                 IsVisible="false" 
                 AbsoluteLayout.LayoutBounds=".5, .5,.5,.5" 
                 AbsoluteLayout.LayoutFlags="All">

            <StackLayout 
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                WidthRequest="300"
                HeightRequest="300"
                >

                <Frame 
                    BorderColor="{StaticResource TriciaryTextColor}" Padding="1">
                    <StackLayout Style="{StaticResource VerticalStack}" HorizontalOptions="CenterAndExpand" Padding="2">
                        <Image x:Name="PopupItemImage" Style="{StaticResource ImageLargeStyle}"/>

                        <Label x:Name="PopupItemName" Style="{StaticResource PopupItemTextStyle} " 
                               MaxLines="2" LineBreakMode="WordWrap" />
                        <Label x:Name="PopupItemDescription" Style="{StaticResource PopupItemTextStyle}" 
                               MaxLines="2" LineBreakMode="WordWrap" />

                        <StackLayout Style="{StaticResource HorizontalStack}">
                            <Label Text="Location: " Style="{StaticResource LabelStyle}" />
                            <Label x:Name="PopupItemLocation" Style="{StaticResource ValueStyle}" />
                        </StackLayout>

                        <StackLayout Style="{StaticResource HorizontalStack}">
                            <Label x:Name="PopupItemAttribute" Style="{StaticResource LabelStyle}" />
                            <Label x:Name="PopupItemValue" Style="{StaticResource ValueStyle}" />
                        </StackLayout>

                        <Button x:Name="PopupCloseButton" 
                                Clicked="ClosePopup_Clicked" 
                                Text="Close"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </StackLayout>
    </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>