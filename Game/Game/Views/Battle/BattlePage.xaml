<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.BattlePage"
             BackgroundImageSource="fridge_empty_background.png" x:Name="BackgroundImage">

    <!--<NavigationPage.TitleView>
        --><!--Menu Bar--><!--
        <StackLayout Style="{StaticResource HorizontalStack}" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand">
            <Frame Padding="10,0,0,0"/>
